
@{
    ViewBag.Title = "Employees";
}

<h2>Employees</h2>
<div id="test"></div>
<div id="employeesdata">waiting for data...</div>
<script type="text/javascript">
    window.onload = function () {
        $.ajax({
            dataType: "json",
            url: "/Employees"
        })
        .done(function (data) {
            var s = "<table class='table'><tr><th>Employee ID</th><th>First Name</th><th>Last Name</th><th>Title</th></tr>";
            $.each(data, function (key, val) {
                s += "<tr><td>"
                   + val["EmployeeID"] + "</td><td>"
                   + val["FirstName"] + "</td><td>"
                   + val["LastName"] + "</td><td>"
                   + val["Title"] + "</td></tr>";
            });

            s += "</table>";
            $('#employeesdata').html(s);
        });
    };
</script>

